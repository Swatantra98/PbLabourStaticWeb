<script>
    var rootPath = window.location.origin + '@ViewBag.rootPath' + '@Url.Action("ContactUs")';
    $("[id*=button]").click(function() {
        var RoleId = $(this).attr('at');
        $.ajax({
            url: rootPath,
            method: 'POST',
            data: { Role: RoleId },
            success: function(data) {
                renderData('dataDisplay', JSON.parse(data));
            },
            error: function(err) {
                console.error(err);
            }
        });
    });
    var renderData = (id, data) => {
        $('#dataDisplay').show();
        $('#' + id).find($('table')).html('');
        $('#' + id).find($('table'))
            .append(
                $('<tr></tr>')
                    .append($('<th></th>').text('Circle'))
                    .append($('<th></th>').text('Officer Name'))
                    .append($('<th></th>').text('Officer Email'))
                    .append($('<th ></th>').text('Designation'))
                    .append($('<th></th>').text('Office  Address'))
            )

        data.forEach(i => {
            $('#' + id).find($('table'))
                .append(
                    $('<tr role="row" class="odd"></tr>')
                        .append($('<td class="sorting_1"></td>').text(i.OfficerCircle))
                        .append($('<td></td>').text(i.OfficerName))
                        .append($('<td></td>').text(i.OfficerEmail))
                        .append($('<td class="designation"></td>').text(i.OfficerDesignation))
                        .append($('<td></td>').text(i.OfficerAddress))
                )
        })
        var monthTds = $('.designation');
        console.log(monthTds)
        var monthNames = ['', 'Deputy Director of Factories', 'Assistant Director of Factories', 'Assistant Labour Commissioner', 'Labour-cum-conciliation Officer',
            'Labour Inspector Grade-I', 'Labour Inspector Grade-II']
        $.each(monthTds, function(index, value) {
            var monthNum = value.innerHTML.trim();
            value.innerHTML = monthNames[monthNum];
        });
    }

</script>
<script src="~/assets/js/SweetAlert/sweetalert2.js"></script>
<script>
    $("#button").click(function() {
        $("#dataDisplay").fadeIn(800);
    });

    $("#SubmitRequest").click(function() {
        if ($("#name").val() != '' && $("#email").val() != '' && $("#number").val() != ''&& $("#message").val() != '') {
             const swalWithBootstrapButtons = Swal.mixin({
            customClass: {
                confirmButton: 'btn btn-success',
                cancelButton: 'btn btn-danger'
            },
            buttonsStyling: false
        })

        swalWithBootstrapButtons.fire({
            title: 'Are you sure?',
            text: "You want to submit this query!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, Submit!',
            cancelButtonText: 'No, cancel!',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                swalWithBootstrapButtons.fire(
                    'Submitted!',
                    'Your queries has been submitted.',
                    'success'
                )
            } else if (result.dismiss === Swal.DismissReason.cancel) {
                swalWithBootstrapButtons.fire(
                    'Cancelled',
                    'Your queries has been canceled :)',
                    'error'
                )
            }
             
    })
        }
        else {
           Swal.fire(
  'Warning',
  'Please fill out all the required fields.',
  'error'
)
        }
       
                          });
    function Close() {
        $("#dataDisplay").fadeOut(800);
    }
</script>
