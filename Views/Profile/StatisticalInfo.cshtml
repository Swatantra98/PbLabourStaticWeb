@model DocumentIndex
@{
    ViewData["Title"] = "Statistical Information";
}
<style>
    .vs-values-layout1 .inner-list ul li {
        padding: 0px;
        margin: 0px;
    }
    .inner-list ul li:before{
        top:0;
        font-size:20px;
    }
    h6{
        width:85%;
    }      .GIGWMenu {
    width: 100%;
    display: none;
    height: 150px;
    margin-top: 115px;
    position: fixed;
    z-index: 9999999;
}
</style>
<section class="vs-values-wrapper vs-values-layout1 py-60">
    <div class="container">
        <div class="row justify-content-center text-center">
        </div>
    </div>
</section>
<section class="vs-values-wrapper vs-values-layout1">
    <div style="background-color: rgba(17,180,245,0.07) !important; padding-top:50px;">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-lg-9 col-xl-7">
                    <div class="section-title">
                        <h1>Statistical Information</h1>
                        <span class="icon">
                            <img src="../assets/img/icon/cashier.png" style="width: 20%;"
                                 alt="Section Title Icons">
                        </span>
                    </div>
                </div>
            </div>
            @if (Model.Documents.Any())
            {
                <div class="row flex-lg-row-reverse align-items-xl-center">
                    <div class="col-lg-12">
                    </div>
                    <div class="col-lg-12 pt-4 pt-md-5 pt-lg-0">
                        <h1>Click on the link for more information...</h1>
                        <div class="inner-list">
                            <ul class="row">
                                @foreach (var item in Model.Documents)
                                {
                                    <li data-toggle="tooltip" title="@item.DocumentName" class="col-sm-12 col-md-4">
                                        <a href="@ViewBag.pbLabourAdminStaticBaseUrl/uploads/@item.UploadedFileName" target="_blank">
                                            <h6 class=".heading6">@item.DocumentName</h6>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
